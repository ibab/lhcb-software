ApplicationMgr.DLLs   += { "LoKiCore" , "LoKiGenMC", "LoKiPhysMC" } ;
ApplicationMgr.ExtSvc += { "LoKiSvc" } ;

DataOnDemandSvc.Algorithms += 
  {
    "DATA='/Event/Phys/StdHepMCPions/Particles' TYPE='PreLoadParticles/StdHepMCPions'" ,
    "DATA='/Event/Phys/StdHepMCPions/Vertices'  TYPE='PreLoadParticles/StdHepMCPions'" 
  } ;

StdHepMCPions.PhysDesktop.ParticleMakerType      = 
"LoKi_HepMCParticleMaker/HepMCMaker";
StdHepMCPions.PhysDesktop.HepMCMaker.Particles   = { "pi+" } ;
StdHepMCPions.PhysDesktop.HepMCMaker.OutputTable = 
"Relations/Phys/StdHepMCPions2HepMC" ;


