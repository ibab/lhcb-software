                <arg const="TRUE" inout="BYVALUE" name="type"    type="Rich::ParticleIDType" />
                <arg const="TRUE" inout="BYVALUE" name="photons" type="LHCb::RichRecSegment::FloatType"               />
                <code>
                        nDetectablePhotons().setData(type,photons);
                </code>
        </method>

        <method 
