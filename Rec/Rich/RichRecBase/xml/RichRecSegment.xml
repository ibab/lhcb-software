        desc             = "Rich reconstruction object describing a continuous track segment in a single radiator" 
        id               = "12423" 
        keyedContTypeDef = "TRUE" 
        location         = "Rec/Rich/RecoEvent/Segments" 
        name             = "RichRecSegment" 
        stdVectorTypeDef = "TRUE" >

        <base name="KeyedObject&lt;int&gt;"/>
