include_path      none
#============================================================================
# Component library building rule
#============================================================================
library          RichHPDImageAnalysis    ../src/*.cpp 
#============================================================================
# define component library link options
#============================================================================

macro_append RichHPDImageAnalysis_shlibflags "$(Boost_linkopts_serialization) -lHist -lGraf -lGraf3d -lGpad -lRint -lPostscript -lMatrix -lPhysics -lm -ldl -rdynamic -lMinuit2" \
  WIN32 " libHist.lib libGraf.lib libGraf3d.lib libGpad.lib libRint.lib libPostscript.lib libMatrix.lib libPhysics.lib libMinuit2.lib"


apply_pattern    component_library library=RichHPDImageAnalysis
