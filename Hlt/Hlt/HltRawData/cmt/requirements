private
  macro SQL_use "" QMTest "SQLDDDB v* Det  -no_auto_imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel  -no_auto_imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
  use PRConfig v*
end_private
