#===============================================================
# LHCb packages shared by Boole and other applications
#===============================================================

# Common
use Associators       v3r9     Associators # Matt Needham

# Calorimeter
use CaloAssociators   v6r14p1  Calo      # Olivier Deschamps

# DAQ
use DAQMonitors       v1r9     DAQ       # Olivier Deschamps

# Herschel
use HCMonitors        v1r0     HC        # Heinrich Schindler

# L0 trigger simulation
use L0MuonMonitor     v2r4     L0        # Julien Cogan
use PuVeto            v7r10    L0        # 

# Muon
use MuonAssociators   v3r5     Muon      # Alessia Satta

# Outer tracker
use OTAssociators     v4r6     OT        # Alexandr Kozlinskiy
use OTMonitor         v3r8     OT        # Francesco Dettori

# Rich
use RichAlgorithms    v1r8     Rich      # Chris Jones
use RichMCMonitors    v1r10    Rich      # Chris Jones
use RichMCTools       v3r18    Rich      # Chris Jones
use RichTools         v2r49    Rich      # Chris Jones

# Silicon detectors
use SiTools           v1r9     Si        # Matt Needham

# Silicon Tracker
use STAlgorithms      v4r7     ST        # Jeroen van Tilburg
use STAssociators     v1r8     ST        # Jeroen van Tilburg
use STCheckers        v4r3     ST        # Jeroen van Tilburg
use STMonitors        v4r3     ST        # Mark Tobin
use STTools           v4r17    ST        # Jeroen van Tilburg

# Velo
use VeloAlgorithms    v5r7p1   Velo      # Tomasz Szumlak
use VeloAssociators   v2r5     Velo      # Tomasz Szumlak
use VeloSimulation    v3r15    Velo      # Tomasz Szumlak
use VeloTools         v4r2     Velo      # Tomasz Szumlak

# Velo Pixel
use VPAlgorithms      v4r4     VP        # Heinrich Schindler
use VPAssociators     v2r6     VP        # Heinrich Schindler
use VPCheckers        v1r0     VP        # Mark Williams
use VPTools           v2r5     VP        # Heinrich Schindler

# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary
apply_pattern QMTestSummarize

# Allow the generation of QMTests
apply_pattern QMTest
