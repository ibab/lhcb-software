package             CaloUtils
version             v2r0

# ================= structure =================================================
branches            cmt doc src CaloUtils

# ================= own includes ==============================================
include_dirs        $(CALOUTILSROOT)

# ================= dependencies ==============================================
use CaloEvent       v10r*   Event
use CaloDet         v4r*    Det 

# ================= constituens: linker library ===============================
library             CaloUtils    *.cpp

# ================= mandatory patterns ========================================
apply_pattern       package_linkopts
apply_pattern       package_stamps
apply_pattern       package_libraries 
apply_pattern       ld_library_path 

# ================= private stuff =============================================
private
apply_pattern       package_shlibflags
macro_append        CaloUtils_shlibflags  $(use_linkopts)
macro_remove        use_linkopts          $(CaloUtils_linkopts)
